<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">    
    <servlet>
        <servlet-name>AminoAcidServlet</servlet-name>
        <servlet-class>nl.bioinf.eschutte.bioinfwebportal.servlets.AminoAcidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NucleotideServlet</servlet-name>
        <servlet-class>nl.bioinf.eschutte.bioinfwebportal.servlets.NucleotideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AminoAcidServlet</servlet-name>
        <url-pattern>/IUPAC_AminoAcids</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NucleotideServlet</servlet-name>
        <url-pattern>/NucleotideServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
